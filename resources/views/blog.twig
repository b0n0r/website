{% extends 'layout' %}

{% block content %}

<div class="blog limited-width">
	{% for post in posts %}
		<article class="post limited-width">
			<div class="metadata">
				<span class="date">{{ post.date.format('l, F jS Y') }}</span>
				{% include 'partials.blog-authors' %}
			</div>

			<a href="{{ route('blog post', post.slug) }}" class="title">
				<h1>{{ post.title }}</h1>
			</a>

			<div class="perex">{{ post.perex|raw }}</div>

			<p class="read-more">
				<a href="{{ route('blog post', post.slug) }}">
					Read more â†’
				</a>
			</p>
		</article>
	{% endfor %}
</div>

{% endblock %}
